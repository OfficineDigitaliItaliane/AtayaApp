<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonCasa" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/casa</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonAccoglienza" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accoglienza</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
