<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/lightGreen</item>
        <item name="colorControlNormal">@color/lightGreen</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonListen" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorControlNormal">@color/lightBlue</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>